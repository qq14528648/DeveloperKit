<?xml version="1.0" encoding="utf-8"?>
<resources>



<!--    Diagonal(斜线)-->
    <declare-styleable name="DiagonalLayout">
        <attr name="diagonal_angle" format="integer" />
        <attr name="diagonal_handleMargins" format="boolean"/>
        <attr name="diagonal_gravity">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="bottom" value="4" />
            <flag name="top" value="8"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MaterialBadgeTextView">
        <attr name="mbtv_backgroundColor" format="color" />
        <attr name="mbtv_border_width" format="dimension" />
        <attr name="mbtv_border_color" format="color" />
        <attr name="mbtv_border_alpha" format="float" />
        <attr name="mbtv_type" format="enum">
            <enum name="shadow_gradual" value="1"/>
            <enum name="shadow_alpha" value="2"/>
        </attr>
    </declare-styleable>
</resources>