<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="animation">
        <item name="android:windowEnterAnimation">@anim/input_enter</item>
        <item name="android:windowExitAnimation">@anim/input_out</item>
        <!-- 窗口 进出的动画-->
    </style>

    <!--底部弹框-->
    <style name="BottomDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>